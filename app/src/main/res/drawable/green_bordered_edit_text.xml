<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#4CAF50" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Gap between borders -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="0dp"
                android:color="@android:color/white" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Inner border -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#4CAF50" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Background color -->
    <item android:top="8dp" android:left="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="18dp" />
        </shape>
    </item>

</layer-list>
